<p id="notice"></p>

<div class="row">

	<%= render 'books/side', book: @book %>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<thead>
				<tr>
					<td></td>
					<td><%= link_to @book.title, book_path(@book.id) %></td>
					<td><%= @book.body %></td>
					<td><%= link_to "Edit", edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
					<td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
</div>