<p id="notice">
	<%= notice %>
</p>

<div class="row">

	<%= render 'books/side', book: @book, user: @user %>

	<div class="col-xs-9">
		<h2>Book detail</h2>
		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Title</th>
					<th>Opinion</th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>
						<%= link_to user_path(@user.id) do %>
							<%= attachment_image_tag @user, :profile_image, size: "40x40", format: 'jpeg', fallback: "no_image.jpg" %><p><%= @user.name %></p>
						<% end %>
					</td>
					<td><%= link_to @book_show.title, book_path(@book_show.id) %></td>
					<td><%= @book_show.body %></td>
					<% if @book_show.user == current_user %>
						<td><%= link_to "Edit", edit_book_path(@book_show.id), class: "btn-sm btn-success" %></td>
						<td><%= link_to "Destroy", book_path(@book_show), method: :delete, class: "btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %></td>
					<% end %>
				</tr>
			</tbody>
			<tbody></tbody>
		</table>
	</div>
</div>